@import 'nib'

$ricotta = #FCFCFA
$eggshell = #F9F8F4
$pearl = #EDEAE6
$chestnut = #403E3B
$oyster = #9C9795

$fontFamily = Graphik,"Helvetica Neue",Helvetica,Arial,sans-serif

@font-face
  font-family: 'Graphik'
  src url('//goodeggs-2.a.ssl.fastly.net/static/fonts/Graphik-Regular-Web.1d179356.eot')
  src url('//goodeggs-2.a.ssl.fastly.net/static/fonts/Graphik-Regular-Web.1d179356.eot?#iefix') format('embedded-opentype'), url('//goodeggs-2.a.ssl.fastly.net/static/fonts/Graphik-Regular-Web.7c8da610.woff') format('woff'), url('//goodeggs-1.a.ssl.fastly.net/static/fonts/Graphik-Regular-Web.304c5b6b.ttf') format('truetype'), url('//goodeggs-1.a.ssl.fastly.net/static/fonts/Graphik-Regular-Web.e1eeefbc.svg#graphik_webregular') format('svg')
  font-weight normal
  font-style normal

@font-face
  font-family 'Graphik'
  src url('//goodeggs-1.a.ssl.fastly.net/static/fonts/graphik-semibold-webfont.f07fc125.eot')
  src url('//goodeggs-1.a.ssl.fastly.net/static/fonts/graphik-semibold-webfont.f07fc125.eot?#iefix') format('embedded-opentype'), url('//goodeggs-1.a.ssl.fastly.net/static/fonts/graphik-semibold-webfont.6c3eb639.woff') format('woff'), url('//goodeggs-2.a.ssl.fastly.net/static/fonts/graphik-semibold-webfont.ff3f0fa4.ttf') format('truetype'), url('//goodeggs-2.a.ssl.fastly.net/static/fonts/graphik-semibold-webfont.1d0eb163.svg#graphiksemibold') format('svg')
  font-weight bold
  font-style normal

aspect-ratio(ratio)
  position relative
  &:before
    content ""
    display block
    padding-top (100% / ratio)
  > .aspect-content
    position absolute
    top 0
    max-height 100%

body
  color $chestnut
  background-color $oyster
  font-family $fontFamily

.deck
  position relative
  margin 20px
  top 55px

@import 'components/card'
@import 'components/app_header'
